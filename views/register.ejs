<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1510936111840-65e151ad71bb?q=80&w=1790&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] bg-zinc-100 flex items-center justify-center">
