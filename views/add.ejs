<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl mb-3">Create a New Post</h1>
        <hr class="opacity-20">


        <form class="mt-5" action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2" type="file" name="postImage">
            <input class="block w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text" name="title" placeholder="Title" style="color: black;">
            <textarea class="textarea block w-1/3 px-3 py-2 mt-2 border-2 rounded-md h-60" type="text" name="description" placeholder="Description" style="color: grey;">
            </textarea>
            <input class="block text-white w-1/3 px-3 py-2 mt-2 bg-red-700  rounded-md" type="submit" value="Create Post">
        </form>
    </div>

